<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<%= render 'books/book', book:  @book_new, user: @user %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <% @books.each do |book| %>

  <tbody>
    <tr>
　　  <td><%= image_tag @user.get_profile_image(100,100) %></td>
　　  <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
<% end %>
</table>







