<% book.book_comments.each do |book_comment| %></p>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %><br>
       <%= link_to book_comment.user.name %>
       <%= book_comment.comment %>
      <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: {"turbolinks" => false} %>
      <% end %>
    </p>
<% end %>