<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/book', book:  @book_new, user: @user %>

    <div class="col-md-8 offset-md-1">

  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th coldpan="3"></th>
      </tr>
    </thead>

    <% @books.each do |book| %>

    <tbody>
      <tr>
　　    <td><%= link_to user_path(book.user_id), class:"text-decoration-none" do %>
　　    <%= image_tag @user.get_profile_image(100,100) %>
　　    <% end %></td>
　　    <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td>コメント数:<%= book.book_comments.count %></td>
      </tr>

    </tbody>
    <% end %>
  </table>
</div>
</div>
</div>







