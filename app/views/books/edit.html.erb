<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<h2>Editing Book</h2>
<%= form_with model:@book do|f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:" " %>
  <label for="opinion">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"opinion", placeholder:" " %>
  <%= f.submit "Update Book" %>

   <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", books_path %>


<% end %>

