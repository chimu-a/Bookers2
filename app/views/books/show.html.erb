<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">

<%= render 'book', book:  @book_new, user: @user %>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table">
<tbody>
  <tr>
    <td><%= image_tag @user.get_profile_image(100,100) %><br>
    <%= link_to @user.name, user_path(@book.user_id) %></td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
    <% end %>
  </tr>
</tbody>
</table>

